<div class="panel panel-default">
	<div class="panel-heading"><i class="glyphicon glyphicon-user" style="padding-right: 10px;"></i>Menu</div>
	<div class="panel-body">
		<div class="row">
			<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
				<h3><%= @menu.nome if @menu.nome %></h3>
				<dl class="dl-vertical">
				  <dt>Nome:</dt>
				  <dd><%= @menu.nome if @menu.nome %></dd>
				  <dt>Email:</dt>
				  <dd><%= @menu.descricao if @menu.descricao %></dd>
				</dl>
			</div>

		</div>
		<div class="row">
			<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
				<div class="well">
					<%= link_to glyph(:"arrow-left") + " Voltar", menus_path, :class => "btn btn-danger" %>
					<%= link_to glyph(:"pencil") + " Alterar", edit_menu_path(@menu), :class => 'btn btn-warning' %>
				</div>
			</div>
		</div>

	</div>
</div>