<div class="panel panel-default">
	<div class="panel-heading"><i class="glyphicon glyphicon-user" style="padding-right: 10px;"></i>Usu√°rio</div>
	<div class="panel-body">
		<div class="row">
			<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
				<h3><%= @user.name if @user.name %></h3>
				<dl class="dl-vertical">
				  <dt>Name:</dt>
				  <dd><%= @user.name if @user.name %></dd>
				  <dt>Email:</dt>
				  <dd><%= @user.email if @user.email %></dd>
				</dl>
				<h3>Perfil:</h3>
				<ul>
				  <li><%= @user.role %></li>
				</ul>
			</div>

		</div>
		<div class="row">
			<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
				<div class="well">
					<%= link_to glyph(:"arrow-left") + " Voltar", users_path, :class => "btn btn-danger" %>
					<%= link_to glyph(:"pencil") + " Alterar", edit_user_path(@user), :class => 'btn btn-warning' %>
				</div>
			</div>
		</div>

	</div>
</div>