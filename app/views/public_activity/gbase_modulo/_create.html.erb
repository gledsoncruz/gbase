<li class="list-group-item list-group-item-success">
  <span class="glyphicon glyphicon-plus"></span>
  <small class="text-muted"><%= a.created_at.strftime('%H:%M:%S %-d %B %Y') %></small><br/>
  <strong><%= activity.owner ? activity.owner.name : 'Convidado' %></strong>
  <% if a.trackable %>
    adicionou módulo <%= link_to a.trackable.name, modulo_path(a.trackable) %>.
  <% else %>
    adicionou um módulo <strong><%= a.name %></strong> que já foi deletado.
  <% end %>
</li>