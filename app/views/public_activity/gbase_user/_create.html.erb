<li class="list-group-item">
  <span class="glyphicon glyphicon-plus"></span>
  <small class="text-muted"><%= a.created_at.strftime('%H:%M:%S %-d %B %Y') %></small><br/>
  <strong><%= activity.owner ? activity.owner.name : 'Guest' %></strong>
  <% if a.trackable %>
    adicionou usuário <%= link_to a.trackable.name, user_path(a.trackable) %>.
  <% else %>
    adicionou um usuário que já foi deletado.
  <% end %>
</li>